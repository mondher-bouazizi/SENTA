<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="480.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="windows.classifiers.selectfeatures.FeatureSelectorWindow">
	<children>
		<!-- ########################### -->
		<!--            title            -->
		<!-- ########################### -->
		
		<Label layoutX="20.0" layoutY="8.0" text="Customize feature sets">
			<font>
				<Font name="System Bold" size="12.0" />
			</font>
		</Label>
		
		<Separator layoutX="20.0" layoutY="32.0" prefHeight="3.0" prefWidth="440.0" />
		
		<!-- ########################### -->
		<!--          check boxes        -->
		<!-- ########################### -->

		<Label layoutX="20.0" layoutY="51.0" text="Basic Features"
			textFill="#002aff">
			<font>
				<Font name="System Bold" size="12.0" />
			</font>
		</Label>

		<CheckBox fx:id="sentimentFeatures" layoutX="48.0" layoutY="78.0" mnemonicParsing="false" text="Sentiment-related features" />
		<CheckBox fx:id="punctuationFeatures" layoutX="48.0" layoutY="102.0" mnemonicParsing="false" text="Punctuation features" />
		<CheckBox fx:id="syntacticFeatures" layoutX="48.0" layoutY="127.0" mnemonicParsing="false" text="Syntactic and stylistic features" />
		<CheckBox fx:id="semanticFeatures" layoutX="48.0" layoutY="152.0" mnemonicParsing="false" text="Semantic features" />
		<CheckBox fx:id="unigramFeatures" layoutX="48.0" layoutY="178.0" mnemonicParsing="false" text="Unigram features" />
		<CheckBox fx:id="topWordsFeatures" layoutX="48.0" layoutY="204.0" mnemonicParsing="false" text="Top words" />
		<CheckBox fx:id="patternFeatures" layoutX="48.0" layoutY="233.0" mnemonicParsing="false" text="Pattern-related features" />
		
		<Label layoutX="21.0" layoutY="276.0" text="Advanced Features" textFill="#002aff">
			<font>
				<Font name="System Bold" size="12.0" />
			</font>
		</Label>
		
		<CheckBox fx:id="advancedSentimentFeatures" layoutX="49.0" layoutY="303.0" mnemonicParsing="false" text="Advanced sentiment features" />
		<CheckBox fx:id="advancedSemanticFeatures" layoutX="49.0" layoutY="327.0" mnemonicParsing="false" text="Advanced semantic features" />
		<CheckBox fx:id="advancedPatternFeatures" layoutX="49.0" layoutY="351.0" mnemonicParsing="false" text="Advanced pattern-related features" />
		<CheckBox fx:id="advancedUnigramFeatures" layoutX="49.0" layoutY="375.0" mnemonicParsing="false" text="Advanced unigram features" />
		
		<!-- ########################### -->
		<!--           Buttons           -->
		<!-- ########################### -->
		
		<Separator layoutX="20.0" layoutY="434.0" prefHeight="3.0" prefWidth="440.0" />
		
		<Button fx:id="all" layoutX="116.0" layoutY="444.0" mnemonicParsing="false" onAction="#handleAll" prefHeight="25.0" prefWidth="60.0" text="All" />
		<Button fx:id="ok" layoutX="219.0" layoutY="444.0" mnemonicParsing="false" onAction="#handleOk" prefHeight="25.0" prefWidth="60.0" text="OK" />
		<Button fx:id="cancel" layoutX="324.0" layoutY="444.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="25.0" prefWidth="60.0" text="Cancel" />

	</children>
</AnchorPane>
